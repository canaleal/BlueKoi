@model IEnumerable<BlueKoi_Enterprise_Final_Project.Models.Orders.Order>

@{
    ViewData["Title"] = "OrderCartView";
}


<nav class="navbar navbar-expand-lg navbar-dark dark py-3">
    <div class="container">
        <a asp-action="StorePageView" asp-route-id="@ViewBag.id" class="navbar-brand">
            <img src="~/images/BlueKoi.png" width="30" height="30" class="d-inline-block align-top mr-2 rotate" alt="">
            <span>Blue Koi</span>
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav w-100">
                <li class="ml-auto">
                    <a class="nav-link active" asp-action="AccountView" asp-route-id="@ViewBag.id">Account</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="container my-5">

    @if (Model != null)
    {
        <div class="row ">
            @foreach (var item in Model)
            {

                <div class="col-lg-4 my-3">
                    <div class="card">
                        <img class="card-img-top" src="@item.ItemURL" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">Order: @item.Id</h5>
                            <h6 class="card-subtitle mb-2 text-muted">Price: $@item.Price</h6>
                            <p class="card-text">The order was @item.OrderState. You can download your image by clicking the button below.</p>
                        </div>
                        <div class="card-body">
                            <a href="@item.ItemURL" class="btn btn-white btn-purple btn-block">View Image</a>
                            <hr />
                            <p>Delete the order. There is no way to recover the order.</p>
                            <form asp-action="OrderCartView" method="post" class="mt-2">
                                <input type="hidden" name="accountId" value="@ViewBag.id" />
                                <input type="hidden" name="itemId" value="@item.Id" />
                                <button id="search-btn" class="ml-auto btn btn-danger btn-block" type="submit">Delete</button>
                            </form>      
                        </div>
                    </div>
                </div>

            }
        </div>
    }
    else
    {
        <p>No Orders Placed!</p>
    }

</div>





