
@model BlueKoi_Enterprise_Final_Project.Models.ViewModels.ViewModelData

@{
    Layout = "_Layout";
    ViewData["Title"] = "ItemView";
}


<div class="container-fluid h-100">
    <div class="row h-100">
        <div class="col-lg-12  align-center dark">
            <div class="card-sign main-rounded col-lg-10 align-center bg-light text-center">
                <div class="row">
                    <div class="col-lg-6 d-none d-lg-block">
                        @if(Model.Item != null){
                        <img class="image-sign-small"
                             src="@Model.Item.ItemURL" alt="art">
                        }
                        else{
                        <img class="image-sign-small"
                             src="@Model.ItemSimple" alt="art">
                        }

                    </div>
                    <div class="col-lg-6 my-auto">
                        <h3 class="my-3">KOI ART</h3>
                        @if (Model.Item != null)
                        {
                            <p>$@Model.Item.ItemPrice</p>
                        }
                        else
                        {
                            <p>This Item has no Price.</p>
                        }

                        <p>Purchase the item from the download Store!</p>

                        @if (Model.Item != null)
                        {
                            <a asp-action="CreditCardView" asp-route-id="@Model.Account.Id" asp-route-itemId="@Model.Item.Id" id="submit-btn"
                               class="btn btn-black btn-purple btn-rounded btn-lg btn-block text-uppercase my-3">
                                Set Card to Buy
                            </a>

                            <form asp-action="SaveItemView" method="post" class="mt-2">
                                <input type="hidden" asp-for="@Model.AccountId" value="@Model.Account.Id" />
                                <input type="hidden" asp-for="@Model.ItemId" value="@Model.Item.Id" />
                                <button id="search-btn" class="ml-auto mt-5 btn btn-warning btn-block" type="submit">Add to Cart</button>
                            </form>

                        }


                        <hr class="my-3 d-none d-lg-block">
                        <a asp-action="StorePageView" asp-route-id="@Model.Account.Id">
                            <i class="fa fa-long-arrow-left m-r-5"
                               aria-hidden="true"></i> Go Back
                        </a>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


