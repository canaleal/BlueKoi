

@model BlueKoi_Enterprise_Final_Project.Models.ViewModels.ViewModelData

@{
    ViewData["Title"] = "ShoppingCartView";
}


<nav class="navbar navbar-expand-lg navbar-dark dark py-3">
    <div class="container">
        <a asp-action="StorePageView" asp-route-id="@Model.AccountId" class="navbar-brand">
            <img src="~/images/BlueKoi.png" width="30" height="30" class="d-inline-block align-top mr-2 rotate" alt="">
            <span>Blue Koi</span>
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav w-100">

                <li class="ml-auto">
                    <a class="nav-link active" asp-action="AccountView" asp-route-id="@Model.AccountId">Account</a>
                </li>
                <li>
                    <a class="nav-link active" asp-action="OrderCartView" asp-route-id="@Model.AccountId">Orders <i class="fas fa-border-all"></i></a>
                </li>
                <li>
                    <a class="nav-link active" asp-action="ShoppingCartView" asp-route-id="@Model.AccountId">Cart <i class="fas fa-shopping-cart"></i></a>
                </li>

            </ul>
        </div>
    </div>
</nav>

<div class="container my-5">
    <h5>Shopping Cart</h5>

    @if (Model.ShoppingCartItems != null)
    {
        <div class="row ">
            @foreach (var item in Model.ShoppingCartItems)
            {

                <div class="col-lg-4 my-3">
                    <div class="card">
                        <img class="card-img-top" src="@item.ItemURL" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">Order: @item.Id</h5>
                            <h6 class="card-subtitle mb-2 text-muted">Price: $@item.Price</h6>

                        </div>
                        <div class="card-body">

                            <a asp-action="CreditCardView" asp-route-id="@Model.AccountId" asp-route-url="@item.ItemURL" id="submit-btn"
                               class="btn btn-black btn-purple btn-rounded btn-lg btn-block text-uppercase my-3">
                                Set Card to Buy
                            </a>
                            <hr />
                            <p>Delete the order. There is no way to recover the order.</p>
                            <form asp-action="ShoppingCartView" method="post" class="mt-2">
                                <input type="hidden" name="id" value="@Model.AccountId" />
                                <input type="hidden" name="itemId" value="@item.Id" />
                                <button id="search-btn" class="ml-auto btn btn-danger btn-block" type="submit">Delete From Cart</button>
                            </form>
                        </div>
                    </div>
                </div>

            }
        </div>
    }
    else
    {
        <p class="text-danger">No Items in Shopping Cart!</p>
    }

</div>





